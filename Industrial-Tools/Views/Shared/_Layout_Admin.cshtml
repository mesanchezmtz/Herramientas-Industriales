@using Industrial_Tools.Models
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Industrial Tools</title>
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/font-awesome-4.7.0/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
</head>
<body id="admin_layout">
    <div class="header-admin">
        <div class="row vertical-align">
            <div class="col-md-3 logo">
                <img src="~/images/logo-tools.png" alt="LOGO" />
            </div>
            <div class="col-md-6">
                <h2 style="color: white; text-align:center;">Administrador Industrial-Tools</h2>
            </div>
            <div class="col-md-3 text-right" style="padding-right:40px;">
                @Html.Partial("_LoginPartialAdmin")
            </div>
        </div>
    </div>
    <div class="container-admin page-body">
        @RenderBody()
    </div>
    <footer>
@*        <hr />*@
        <br />
        <p>&copy; @DateTime.Now.Year - Industrial Tools</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/functions-chat-admin.js" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
