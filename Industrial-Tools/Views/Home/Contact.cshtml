@model Industrial_Tools.Models.ContactoModel
@{
    ViewBag.Title = "Contacto";
}
<br />
<div class="about">
	<h2>Contáctanos</h2>
	<br />
	<div class="row contact-column">
		<div class="col-md-6 col-md-offset-3">
			<div id="form-contact" style="text-align:left;">
				@using (Html.BeginForm("Contact", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
				{
					<div class="row">
						<div class="col-md-8 col-md-offset-2">
							<div class="form-group">
								<div id="contactpage_email" class="field">
									@Html.LabelFor(m => m.nombre, new { @class = "control-label", @style = "font-weight: bold;" })
									@Html.TextBoxFor(m => m.nombre, new { @class = "text form-control" })
									@Html.ValidationMessageFor(m => m.nombre, "", new { @class = "text-danger" })
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-8 col-md-offset-2">
							<div class="form-group">
								<div id="contactpage_name" class="field">
									@Html.LabelFor(m => m.email, new { @class = "control-label", @style = "font-weight: bold;" })
									@Html.TextBoxFor(m => m.email, new { @class = "text form-control" })
									@Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-8 col-md-offset-2">
							<div class="form-group">
								<div id="contactpage_phone" class="field">
									@Html.LabelFor(m => m.telefono, new { @class = "control-label", @style = "font-weight: bold;" })
									@Html.TextBoxFor(m => m.telefono, new { @class = "text form-control" })
									@Html.ValidationMessageFor(m => m.telefono, "", new { @class = "text-danger" })
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-8 col-md-offset-2">
							<div class="form-group">
								<div id="contactpage_message">
									@Html.LabelFor(m => m.mensaje, new { @class = "control-label", @style = "font-weight: bold;" })
									@Html.TextAreaFor(m => m.mensaje, new { @class = "text form-control" })
									@Html.ValidationMessageFor(m => m.mensaje, "", new { @class = "text-danger" })
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-8 col-md-offset-2" style="text-align: right; margin-right: 2rem;">
							<div class="form-group control-label">
								<p class="required" style=" font-weight:bold !important;">* Campos obligatorios</p>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-8 col-md-offset-2">
							<div class="form-group">
								<div class="actions">
									<input type="submit" value="Enviar" class="button btn btn-success btn-block" id="send-message-btn">
								</div>
							</div>
						</div>
					</div>

					if (Session["secc"] != null)
					{
						<div class="row">
							<div class="col-md-10 col-md-offset-1">
								<div class="alert-success alert alert-dismissible" style="padding: 10px 20px;">
									<a href="#" class="close" style="padding-right: 10px;" data-dismiss="alert" aria-label="close">&times;</a>
									<span>@Session["secc"]</span>
								</div>
							</div>
						</div>
						Session["secc"] = null;
					}

					<div class="row">
						<div class="col-md-10 col-md-offset-1">
							<div class="alert-danger">
								@Html.ValidationSummary(true, "", new { @class = "text-danger" })
							</div>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
	<div class="row contact-column">
		
			<div class="col-md-4">
				<span class="dot"><i class="fa fa-phone"></i></span>
				<h6 class="phone-number-contact">+52 1 722 000 0000</h6>
			</div>
		
		<div class="sep"></div>
		
			<div class="col-md-4">
				<span class="dot"><i class="fa fa-envelope-o"></i></span>
				<br />
				<br />
				<address>
					<strong>Soporte:</strong>   <a href="#">soporte@idustools.com</a><br />
					<strong>Mercadotecnía:</strong> <a href="#">marketing@idustools.com</a>
				</address>
			</div>
		
		<div class="sep"></div>
		
			<div class="col-md-4">
				<span class="dot"><i class="fa fa-facebook-f"></i></span>
				<h6 class="phone-number-contact">ecommerce indus-tools</h6>
			</div>
		</div>
	
</div>
